
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Reads the user's role from their document in the /users collection
    function getRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    
    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }

    function isStaff() {
      return isSignedIn() && getRole(request.auth.uid) == 'staff';
    }

    function getStaffProfile(uid) {
      return get(/databases/$(database)/documents/staff/$(uid)).data;
    }
    
    // --- User Profile Rules ---
    match /users/{userId} {
      // Any authenticated user can read any user profile (for display names, etc.).
      allow get: if isSignedIn();
      
      // AN ADMIN SIGNUP: A user can create their own profile with an 'admin' role
      // ONLY if no other users exist in the system yet.
      allow create: if isOwner(userId) 
                    && request.resource.data.role == 'admin'
                    && !exists(/databases/$(database)/documents/users);

      // Staff profiles are created via an API route, not directly by users signing up.
      // Admins can update any profile (e.g., to change roles or display names).
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
    }

    // --- Patient Rules ---
    match /patients/{patientId} {
      // Admins and staff can read patient data.
      allow read: if isAdmin() || isStaff();
      // Only admins and staff can write to a patient's records.
      allow write: if isAdmin() || isStaff();

      // --- Subcollection Rules for Patients ---
      match /{allSubcollections=**} {
        // Inherit parent permissions for all subcollections.
        allow read, write: if isAdmin() || isStaff();
      }
    }

    // --- Staff Rules ---
    match /staff/{staffId} {
      // All authenticated users (admin and other staff) can see the staff list.
      allow read: if isSignedIn();
      
      // Only admins can create new staff invitation documents and update profiles.
      allow create, update: if isAdmin();
      
      // A user can update their own staff profile once they've signed up (become owner of the doc).
      allow update: if isStaff() && isOwner(staffId);

      // Only admins can delete staff profiles.
      allow delete: if isAdmin();
    }
  }
}
