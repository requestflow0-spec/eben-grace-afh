
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Read role from the custom claims on the auth token.
    function getRole() {
      return request.auth.token.role;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    function isStaff() {
      return request.auth.token.staff == true;
    }
    
    // --- User Profile Rules ---
    match /users/{userId} {
      // Any authenticated user can read any user profile (e.g., for display names).
      allow get: if isSignedIn();
      
      // Admins can create staff user profiles.
      // This is now handled by the secure API route, but the rule is a good safeguard.
      allow create: if isAdmin() || isOwner(userId);
      
      // Users can update their own profile, but cannot change their role.
      // The role is managed by custom claims, but we prevent tampering with the doc field.
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      
      // Admins can update any profile (e.g., to change display names).
      allow update: if isAdmin();
    }

    // --- Patient Rules ---
    match /patients/{patientId} {
      // Admins and staff can read patient data.
      allow read: if isAdmin() || isStaff();
      // Only admins can create, update, or delete patient records.
      allow write: if isAdmin();

      // --- Subcollection Rules for Patients ---
      match /dailyRecords/{recordId} {
        // Admins and staff can read records.
        allow read: if isAdmin() || isStaff();
        // Admins and staff can create and update records.
        allow create, update: if isAdmin() || isStaff();
        // Only admins can delete records.
        allow delete: if isAdmin();
      }

      match /sleepLogs/{sleepLogId} {
        // Admins and staff can manage sleep logs.
        allow read, write: if isAdmin() || isStaff();
      }
    }

    // --- Staff Rules ---
    match /staff/{staffId} {
      // All authenticated users (admin and other staff) can see the staff list.
      allow read: if isSignedIn();
      // Only admins can create, update, or delete staff profiles.
      allow write: if isAdmin();
    }
  }
}
