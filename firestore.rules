
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admin role is determined by a custom claim set securely on the server.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Staff role is determined by the absence of an admin claim.
    function isStaff() {
      return isSignedIn() && request.auth.token.admin != true;
    }

    // --- User Profile Rules ---
    match /users/{userId} {
      // Any authenticated user can read any user profile (e.g., for display names).
      allow get: if isSignedIn();
      
      // A user can only create their own profile document.
      // They cannot assign their own role; this is handled by the server.
      allow create: if isOwner(userId) && request.resource.data.role != 'admin';
      
      // Admins can create other user profiles (for staff).
      allow create: if isAdmin();
      
      // Users can update their own profile, but cannot change their role.
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      
      // Admins can update any profile (e.g., to change roles).
      allow update: if isAdmin();
    }

    // --- Patient Rules ---
    match /patients/{patientId} {
      // Admins and staff can read patient data.
      allow read: if isAdmin() || isStaff();
      // Only admins can create, update, or delete patient records.
      allow write: if isAdmin();

      // --- Subcollection Rules for Patients ---
      match /dailyRecords/{recordId} {
        // Admins and staff can read records.
        allow read: if isAdmin() || isStaff();
        // Admins and staff can create and update records.
        allow create, update: if isAdmin() || isStaff();
        // Only admins can delete records.
        allow delete: if isAdmin();
      }

      match /sleepLogs/{sleepLogId} {
        // Admins and staff can manage sleep logs.
        allow read, write: if isAdmin() || isStaff();
      }
    }

    // --- Staff Rules ---
    match /staff/{staffId} {
      // All authenticated users (admin and other staff) can see the staff list.
      allow read: if isSignedIn();
      // Only admins can create, update, or delete staff profiles.
      allow write: if isAdmin();
    }
  }
}
