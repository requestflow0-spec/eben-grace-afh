
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Reads the user's role from their document in the /users collection
    function getRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    
    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }

    function isStaff() {
      return isSignedIn() && getRole(request.auth.uid) == 'staff';
    }
    
    // --- User Profile Rules ---
    match /users/{userId} {
      // Any authenticated user can read any user profile (e.g., for display names).
      allow get: if isSignedIn();
      
      // An admin can create a user profile for a new staff member.
      allow create: if isAdmin() && request.resource.data.role == 'staff';

      // A user can create their own profile.
      // This rule allows the very first user to sign up and become an admin.
      // It should only work if no other user documents exist.
      allow create: if isOwner(userId) 
                    && request.resource.data.role == 'admin'
                    && !exists(/databases/$(database)/documents/users);

      // Users can update their own profile, but cannot change their role.
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      
      // Admins can update any profile (e.g., to change roles or display names).
      allow update: if isAdmin();
    }

    // --- Patient Rules ---
    match /patients/{patientId} {
      // Admins and staff can read patient data.
      allow read: if isAdmin() || isStaff();
      // Only admins can create, update, or delete patient records.
      allow write: if isAdmin();

      // --- Subcollection Rules for Patients ---
      match /dailyRecords/{recordId} {
        // Admins and staff can read records.
        allow read: if isAdmin() || isStaff();
        // Admins and staff can create and update records.
        allow create, update: if isAdmin() || isStaff();
        // Only admins can delete records.
        allow delete: if isAdmin();
      }

      match /sleepLogs/{sleepLogId} {
        // Admins and staff can manage sleep logs.
        allow read, write: if isAdmin() || isStaff();
      }
    }

    // --- Staff Rules ---
    match /staff/{staffId} {
      // All authenticated users (admin and other staff) can see the staff list.
      allow read: if isSignedIn();
      
      // Only admins can create new staff documents.
      allow create: if isAdmin();
      
      // A user can update their own staff profile if they are a staff member.
      // Admins can also update any staff profile.
      allow update: if (isStaff() && isOwner(staffId)) || isAdmin();

      // Only admins can delete staff profiles.
      allow delete: if isAdmin();
    }
  }
}
