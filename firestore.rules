
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Reads the user's role from their document in the /users collection
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isStaff() {
      return isSignedIn() && getRole() == 'staff';
    }
    
    // --- User Profile Rules ---
    match /users/{userId} {
      // Any authenticated user can read any user profile (e.g., for display names).
      allow get: if isSignedIn();
      
      // Admins can create staff user profiles.
      allow create: if isAdmin();

      // A user can create their own profile, but cannot assign themselves a role.
      // This is for the initial signup. Admins can assign roles.
      allow create: if isOwner(userId) && (!('role' in request.resource.data) || request.resource.data.role == null);

      // Users can update their own profile, but cannot change their role.
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      
      // Admins can update any profile (e.g., to change roles or display names).
      allow update: if isAdmin();
    }

    // --- Patient Rules ---
    match /patients/{patientId} {
      // Admins and staff can read patient data.
      allow read: if isAdmin() || isStaff();
      // Only admins can create, update, or delete patient records.
      allow write: if isAdmin();

      // --- Subcollection Rules for Patients ---
      match /dailyRecords/{recordId} {
        // Admins and staff can read records.
        allow read: if isAdmin() || isStaff();
        // Admins and staff can create and update records.
        allow create, update: if isAdmin() || isStaff();
        // Only admins can delete records.
        allow delete: if isAdmin();
      }

      match /sleepLogs/{sleepLogId} {
        // Admins and staff can manage sleep logs.
        allow read, write: if isAdmin() || isStaff();
      }
    }

    // --- Staff Rules ---
    match /staff/{staffId} {
      // All authenticated users (admin and other staff) can see the staff list.
      allow read: if isSignedIn();
      // Only admins can create, update, or delete staff profiles.
      allow write: if isAdmin();
    }
  }
}
