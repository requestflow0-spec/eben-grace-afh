rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Get the user's role from their profile document
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return getUserRole(request.auth.uid) == 'admin';
    }

    match /users/{userId} {
      // Allow user to read their own profile
      allow read: if isOwner(userId);
      // Allow user to create their own profile on signup
      allow create: if isOwner(userId);
      // Prevent user from changing their own role
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
    }
    
    match /patients/{patientId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
      
      match /dailyRecords/{dailyRecordId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isAdmin();
      }
      
      match /sleepLogs/{sleepLogId} {
        allow read, write: if isSignedIn();
      }
    }
    
    // Only admins can create/manage staff documents
    match /staff/{staffId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // CollectionGroup support
    match /{path=**}/dailyRecords/{dailyRecordId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    match /{path=**}/sleepLogs/{sleepLogId} {
      allow read, write: if isSignedIn();
    }
  }
}
